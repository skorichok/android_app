<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/AppBaseTheme" android:background="@drawable/calendar_fon">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Charts"
              android:id="@+id/textView2" android:textSize="35sp" android:textColor="#000000"
              android:layout_below="@+id/imageView2" android:layout_alignLeft="@+id/imageView2"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Calendar"
              android:id="@+id/textView3" android:textSize="35sp" android:textColor="#000000"
              android:layout_below="@+id/imageView" android:layout_alignLeft="@+id/imageView"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/calendar"
            android:onClick="calendar"
            android:layout_marginTop="53dp"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_marginLeft="49dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/health"
            android:layout_above="@+id/textView3" android:layout_toRightOf="@+id/textView3"
            android:layout_marginLeft="116dp"
            android:onClick="progress"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_marginTop="71dp" android:text="Start Training" android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:onClick="startTraining"/>

</RelativeLayout>