<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="20dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight:"
            android:id="@+id/weight_text_view"
            android:textSize="40dp"
            android:layout_marginTop="20dp"
            android:textColor="#5882FA"
            android:layout_marginLeft="50dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weight_value"
            android:layout_marginTop="10dp"
            android:textColor="#5882FA"
            android:layout_toRightOf="@+id/weight_text_view"
            android:layout_marginLeft="50dp"
            android:text="" android:textSize="60dp"/>

    <SeekBar
            android:layout_width="200pt"
            android:layout_height="wrap_content"
            android:scrollbarStyle="outsideInset"
            android:id="@+id/weight_seek_bar"
            android:layout_marginTop="30dp"
            android:background="#c1d6c4"
            android:alpha="0.5"
            android:layout_below="@+id/weight_text_view"
            android:layout_marginLeft="50dp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reps:"
            android:id="@+id/reps_text_view"
            android:textSize="40dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/weight_seek_bar"
            android:textColor="#5882FA"
            android:layout_marginLeft="50dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/reps_value"
            android:textSize="60dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/weight_seek_bar"
            android:layout_toRightOf="@+id/reps_text_view"
            android:textColor="#5882FA"
            android:layout_marginLeft="50dp"/>

    <SeekBar
            android:layout_width="200pt"
            android:layout_height="wrap_content"
            android:scrollbarStyle="outsideInset"
            android:id="@+id/reps_seek_bar"
            android:layout_marginTop="30dp"
            android:background="#c1d6c4"
            android:alpha="0.5"
            android:layout_below="@+id/reps_text_view"
            android:layout_marginLeft="50dp"
            />
    <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/button_ok"
            android:src="@drawable/accept_button"
            android:layout_below="@+id/reps_seek_bar"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:textSize="30dp"/>
</RelativeLayout>